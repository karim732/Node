extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet" href="/css/product.css")

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header 
                            h1.product__title #{product.title}
                        .card__image 
                            img(src="https://img.freepik.com/free-vector/bunny-coloring-book-illustration_23-2150074575.jpg?w=740&t=st=1702899951~exp=1702900551~hmac=3e2bc368cbe436695a3f1cfcd69263cc6c00562c341a36cb2157a76d30d79680")
                        .card__content 
                            h2.product__price $19.99
                            p.product__description A very interesting book about so many even more interesting things!
                        .card__actions
                            button.btn Add to Cart
        else 
            h1 No products
